<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="16dp">
    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Convertissuer"
        android:textColor="#741DB0"
        android:textSize="24sp"
        android:textStyle="bold"

        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="32dp"/>
    <!-- First line: Amount input and Currency spinner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/amountInput"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:hint="Montant"
            android:inputType="numberDecimal"

            android:layout_marginEnd="8dp"/>

        <Spinner
            android:id="@+id/currencySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Second line: Amount input and Dirham input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/amountInput2"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:hint="Montant"
            android:inputType="numberDecimal"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:hint="Dirham"
            android:inputType="numberDecimal"/>
    </LinearLayout>

    <!-- Third line: Convertir and Quitter buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/convertButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Convertir"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/quitButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Quitter"/>
    </LinearLayout>

</LinearLayout>
